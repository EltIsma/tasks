                    "type": "string"
                },
                "deadline": {
                    "type": "string",
                    "example": "2025-01-01T13:00:00Z"
                },
                "lesson_id": {
                    "type": "string"
                },
                "payload": {
                    "type": "string"
                }
            }
        },
        "request.UserResult": {
            "type": "object",
            "required": [
                "mark",
                "user_id"
            ],
            "properties": {
                "mark": {
                    "type": "integer"
                },
                "user_id": {
                    "type": "string"
                }
            }
        },
        "response.AssignmentID": {
            "type": "object",
            "properties": {
                "class_task_id": {
                    "type": "string"
                }
            }
        },
        "response.Assignments": {
            "type": "object",
            "required": [
                "class",
                "class_task_id",
                "lesson_id"
            ],
            "properties": {
                "class": {
                    "type": "string"
                },
                "class_task_id": {
                    "type": "string"
                },
                "lesson_id": {
                    "type": "string"
                }
            }
        },
        "response.ClassTasks": {
            "type": "object",
            "properties": {
                "class": {
                    "type": "string"
                },
                "tasks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/response.LessonTask"
                    }
                }
            }
        },
        "response.LessonTask": {
            "type": "object",
            "required": [
                "payload"
            ],
            "properties": {
                "deadline": {
                    "type": "string",
                    "example": "2025-01-01T13:00:00Z"
                },
                "lesson_id": {
                    "type": "string"
                },
                "payload": {
                    "type": "string"
                },
                "task_id": {
                    "type": "string"
                },
                "task_template_id": {
                    "type": "string"
                }
            }
        },
        "response.Task": {
            "type": "object",
            "required": [
                "payload"
            ],
            "properties": {
                "deadline": {
                    "type": "string",
                    "example": "2025-01-01T13:00:00Z"
                },
                "id": {
                    "type": "string"
                },
                "payload": {
                    "type": "string"
                }
            }
        },
        "response.TaskAssignments": {
            "type": "object",
            "required": [
                "assignments",
                "task_template_id"
            ],
            "properties": {
