    "definitions": {
        "common.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "error meessage"
                },
                "error_code": {
                    "type": "integer",
                    "example": 0
                }
            }
        },
        "request.ClassLesson": {
            "type": "object",
            "required": [
                "class",
                "lesson_id"
            ],
            "properties": {
                "class": {
                    "type": "string"
                },
                "lesson_id": {
                    "type": "string"
                }
            }
        },
        "request.Task": {
            "type": "object",
            "required": [
                "payload"
            ],
            "properties": {
                "deadline": {
                    "type": "string",
                    "example": "2025-01-01T13:00:00Z"
                },
                "payload": {
                    "type": "string"
                }
            }
        },
        "request.TaskAsignment": {
            "type": "object",
            "required": [
                "class",
                "class_task_id",
                "payload"
            ],
            "properties": {
                "class": {
                    "type": "string"
                },
                "class_task_id": {
                    "type": "string"
                },
                "payload": {
                    "type": "string"
                }
            }
        },
        "request.TaskAsignmentID": {
            "type": "object",
            "required": [
                "class_task_id"
            ],
            "properties": {
                "class_task_id": {
                    "type": "string"
                }
            }
        },
        "request.TaskAsignments": {
            "type": "object",
            "required": [
                "assign_to",
                "template_task_id"
            ],
            "properties": {
                "assign_to": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/request.ClassLesson"
                    }
                },
                "template_task_id": {
                    "type": "string"
                }
            }
        },
        "request.TaskResult": {
            "type": "object",
            "required": [
                "lesson_id",
                "task_id",
                "users_result"
            ],
            "properties": {
                "lesson_id": {
                    "type": "string"
                },
                "task_id": {
                    "type": "string"
                },
                "users_result": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/request.UserResult"
                    }
                }
            }
        },
        "request.TaskWithAsignment": {
            "type": "object",
            "required": [
                "class",
                "lesson_id",
